{
    "name": "boo/emoji",
    "description": "Emoji regular expressions for PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Stendahl",
            "email": "jonas@stendahl.me"
        }
    ],
    "require": {
        "php": "7.0.* || 7.1.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v2.0",
        "guzzlehttp/guzzle": "^6.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "pds/skeleton": "^1.0",
        "phpmd/phpmd": "^2.0",
        "phpro/grumphp": "^0.11",
        "phpstan/phpstan": "^0.6",
        "phpunit/phpunit": "^6.0",
        "sebastian/phpcpd": "^2.0",
        "sensiolabs/security-checker": "^4.0",
        "symfony/var-dumper": "^3.0",
        "twig/twig": "^2.0"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Boo\\Emoji\\": "src"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Boo\\Emoji\\Tests\\": "test/"
       }
   },
   "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
